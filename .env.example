# LinkedIn Scraper Configuration
LINKEDIN_BASE_URL=https://www.linkedin.com/jobs
CHROME_DRIVER_PATH=/path/to/chromedriver
HEADLESS_MODE=True

# LinkedIn API Settings (Opsiyonel)
LINKEDIN_CLIENT_ID=your_client_id
LINKEDIN_CLIENT_SECRET=your_client_secret
LINKEDIN_ACCESS_TOKEN=your_access_token

# Output Settings
OUTPUT_FORMAT=csv  # csv or json
OUTPUT_DIR=data

# Scraping Settings
MAX_PAGES=10
SCROLL_PAUSE_TIME=2
REQUEST_TIMEOUT=30
JOB_SEARCH_DELAY=1  # Delay between job searches
MAX_JOBS_PER_SEARCH=100

# Location Settings
DEFAULT_COUNTRY=Turkey
DEFAULT_CITY=Istanbul

# Job Search Filters
EXPERIENCE_LEVELS=entry,associate,mid-senior,director,executive
JOB_TYPES=full-time,part-time,contract,temporary,internship
DATE_POSTED=1,7,30  # Last 24 hours, Last week, Last month

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/scraper.log 